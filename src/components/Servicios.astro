---
import servicios from "../config/Servicios.json";
---

<div class="px-10 my-14">
  <h4 class="text-center text-4xl font-bold text-rose-400" data-aos="fade-up" data-aos-duration="1500">
    Nuestros Servicios
  </h4>
  <h2 class="text-center text-2xl mb-4" data-aos="fade-down" data-aos-duration="1000">
    Servicios profesionales en salud mental
  </h2>

  <div class="flex flex-wrap justify-center gap-4 mt-8" data-aos="zoom-in-down" data-aos-duration="1000">
    <div class="swiper mySwiper">
      <div class="swiper-wrapper">
        {
          servicios.map((servicio) => (
            <div class="swiper-slide p-4 bg-white border border-gray-200 rounded-lg shadow-md  hover:transform hover:scale-105 transition-transform duration-300">
              <div>
                <img class="rounded-t-lg w-full h-80 object-cover object-top" src={servicio.imagen} alt="" />
              </div>
              <div class="p-5">
                <div>
                  <h5 class="text-center text-rose-400 mb-2 text-lg md:text-2xl font-bold tracking-tight uppercase">
                    {servicio.servicio}
                  </h5>
                </div>
                <p class="text-center mb-3 font-normal text-gray-700 text-base md:text-lg">{servicio.atencion}</p>
              </div>
            </div>
          ))
        }
      </div>
      <!-- <div class="swiper-pagination"></div> -->
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </div>
</div>

<style>
  .mySwiper {
    padding: initial; /* Valor por defecto para móvil */
  }

  @media (min-width: 1000px) {
    .mySwiper {
      padding: 2rem 3rem; /* Solo en pantallas ≥1000px */
    }
  }

  .swiper-button-prev,
  .swiper-button-next {
    color: #ff637e;
  }
  .swiper-wrapper {
    height: initial;
  }
</style>

<script>
  import Swiper from "swiper";
  import { Pagination } from "swiper/modules";
  import { Navigation } from "swiper/modules";
  import { Autoplay } from "swiper/modules";
  import "swiper/css";
  import "swiper/css/pagination";
  import "swiper/css/navigation";

  const swiper = new Swiper(".mySwiper", {
    // slidesPerView: 1,
    // spaceBetween: 10,
    modules: [Pagination, Navigation, Autoplay],
    loop: true,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    autoplay: {
      // delay: 2500,
      pauseOnMouseEnter: true,
      disableOnInteraction: false,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    breakpoints: {
      640: {
        slidesPerView: 1,
        spaceBetween: 20,
      },
      768: {
        slidesPerView: 2,
        spaceBetween: 40,
      },
      1024: {
        slidesPerView: 3,
        spaceBetween: 50,
      },
    },
  });
</script>

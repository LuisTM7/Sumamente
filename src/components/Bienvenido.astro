<style>
  .hero_image {
    z-index: 1;
    padding: 60px;
    position: relative;
  }

  .hero_image:after,
  .hero_image:before {
    width: 80%;
    height: 80%;
    z-index: -1;
    content: "";
    position: absolute;
  }

  .hero_image:before {
    top: 0;
    left: 0;
    /* background-color: #a4c5f8; */
    background-color: #e392aa;
  }

  .hero_image:after {
    right: 0;
    bottom: 0;
    /* background-color: #e392aa; */
    background-color: #a4c5f8;
  }

  .hero_image img {
    border-radius: 150px 0 150px 0;
  }
</style>
